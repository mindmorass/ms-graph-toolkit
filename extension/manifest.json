{
  "manifest_version": 3,
  "name": "Microsoft Graph Token Extractor",
  "version": "1.0.0",
  "description": "Extracts access and refresh tokens from Microsoft Graph Explorer",
  "permissions": [
    "storage",
    "clipboardWrite",
    "webRequest"
  ],
  "host_permissions": [
    "https://developer.microsoft.com/*",
    "https://graph.microsoft.com/*",
    "https://login.microsoftonline.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://developer.microsoft.com/graph/graph-explorer*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

